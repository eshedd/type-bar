{
  "name": "Type Bar",
  "version": "1",
  "description": "Text bar for Domino site",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],

  "background": {
      "scripts": ["background.js"]
  },

  "permissions": ["tabs"],

  "browser_action": {
    "default_icon": "icon_128.png",
    "default_popup": "popup.html",
    "default_title": "Popup placeholder"
  }
}